                    @Html.DisplayNameForInnerType((Prescription model) => model.Medication)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Prescriptions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Refills)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dosage)
                    </td>
                    <td>
