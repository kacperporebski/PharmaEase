@model PharmaEase.Models.Delivers

@{
    ViewData["Title"] = "Deliver";
}

<h1>Deliver</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deliver">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourierID" class="control-label"></label>
                <select asp-for="CourierID" class ="form-control" asp-items="ViewBag.Couriers"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Deliver" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
