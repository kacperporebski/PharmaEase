@model IEnumerable<PharmaEase.Models.Courier>

@{
    ViewData["Title"] = "Index";
}

<h1>We got a runner!</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperatingRange)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OperatingRange)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourierId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourierId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourierId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
